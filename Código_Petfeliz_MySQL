create database petfeliz; -- criando o banco de dados
USE petfeliz; -- selecionando o banco

/* criando as tabelas*/

create table if not exists raca(
rac_int_id int(11) primary key not null auto_increment,
rac_var_nome varchar(150) not null
);

create table if not exists pessoa(
pes_int_id int not null primary key auto_increment,
pes_var_nome varchar(100) not null,
pes_var_cpf varchar(14) not null,
pes_dat_nascimento date,
pes_var_telefone varchar(45) not null
);

create table pessoa_endereco(
pes_int_id int not null,
end_int_id int not null
);

create table endereco(
end_int_id int primary key not null auto_increment,
end_var_rua varchar(50) not null,
end_var_bairro varchar(50) not null,
end_var_cidade varchar(50) not null,
end_var_estado varchar(9) not null,
end_var_cep varchar(9) not null
);

create table if not exists adocao(
ado_int_id int not null primary key auto_increment,
pes_int_id int not null,
ani_int_id int not null,
ado_dat_adocao datetime not null,
ado_cha_status char(1) not null
);

create table if not exists animal(
ani_int_id int primary key not null auto_increment,
ani_var_nome varchar(50) not null,
ani_dat_nascimento date not null,
ani_var_chip varchar(100) not null,
ani_int_vivo int(1) not null,
rac_int_id int not null,
esp_int_id int not null,
ani_var_tipo varchar(3) not null,
sex_int_id int not null
);

create table if not exists sexo(
sex_int_id int not null primary key auto_increment,
nome varchar(45) not null
);

create table if not exists animal_peso(
ani_int_id int not null,
pso_int_id int not null
);

create table if not exists peso(
pso_int_id int primary key not null auto_increment,
pso_flo_peso float not null,
pso_dat_data datetime not null
);

create table if not exists especie(
esp_ind_id int primary key not null auto_increment,
esp_var_nome varchar(50) not null
);

/* Final do banco de dados*/
